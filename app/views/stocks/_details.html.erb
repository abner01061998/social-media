<%= turbo_frame_tag :stock_details do %>
	<div class="mt-3 results-block">
		<%= render 'layouts/messages' %>
	</div>
	<% if @stock %>
		<div class='card card-header results-block mt-3'>
			<strong>Symbol </strong> <%=@stock.ticker%>
			<strong>Name</strong> <%=@stock.name%>
			<strong>Last Price</strong> <%=@stock.last_price%>
			<% if current_user.can_track_stock? @stock.ticker %>
				<%= link_to 'Track to My Portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker), method: :post, data: { turbo_frame: :user_stocks, turbo_method: :post }  %>
			<% end %>
		</div>
	<% end %>
<% end %>