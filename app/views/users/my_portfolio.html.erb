<h1>My portfolio</h1>
<div class="search-area">
    <h3>Search Stocks</h3>
		<%= form_with url: search_stock_path, 
					method: :get,
					data: { turbo_frame: :stock_details } do |f| %>
			<div class="form-group row">
					<div class="col-sm-9 no-r-padding">
							<%= text_field_tag :stock, params[:stock], placeholder:"Stock ticker symbol", autofocus: true, class:"form-control form-control-lg", required: true%>
					</div>
					<div class="col-sm-3 no-l-padding">
							<%= button_tag class: "btn btn-success" do %>    
									<%=  fa_icon 'search 2x' %>
							<% end %>
					</div>
			</div>
		<% end %>
</div>

<%= turbo_frame_tag :stock_details do %>
<% end %>


<%= turbo_frame_tag :user_stocks do %>
	<%= render 'user_stocks/list' , user: current_user.id   %>
<% end %>


