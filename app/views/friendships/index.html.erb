<h1>My Friends</h1>

<%= form_with url: search_friend_path, 
      method: :get,
      data: { turbo_frame: :friend_preview } do |f| %>
  <div class="form-group row">
      <div class="col-sm-9 no-r-padding">
          <%= text_field_tag :input, params[:input], placeholder:"email or name", autofocus: true, class:"form-control form-control-lg", required: true%>
      </div>
      <div class="col-sm-3 no-l-padding">
          <%= button_tag class: "btn btn-success" do %>    
              <%=  fa_icon 'search 2x' %>
          <% end %>
      </div>
  </div>
<% end %>

<%= turbo_frame_tag :friend_preview do %>
<% end %>

<%= turbo_frame_tag :my_friends_list do %>
  <%= render 'list' %>
<% end %>