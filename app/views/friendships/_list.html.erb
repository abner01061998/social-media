<%= turbo_frame_tag :my_friends_list do %>
  <div class="mt-3 results-block">
		<%= render 'layouts/messages' %>
	</div>
  <div class="row mt-3">
    <div class="col-9">
      <table class="table table-dark table-hover">
        <thead>
          <tr>
            <td>Email</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Actions</td>
          </tr>
        <thead>
        <tbody>
          <% if @friends %>
            <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.email %></td>
              <td><%= friend.first_name %></td>
              <td><%= friend.last_name %></td>
              <td>
                <%= link_to friendship_path(friend.id), data: { turbo_frame: :user_friends, turbo_method: :delete }, class:'btn btn-sm btn-warning'  do %>
                  <%= fa_icon 'remove' %> Unfollow
                <% end %>

                <%= link_to friend_profile_path(user: friend.id), class: 'btn btn-sm btn-info' do %>
                  <%= fa_icon 'search' %> Profile
                <% end %>
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
